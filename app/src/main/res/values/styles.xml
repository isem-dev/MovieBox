<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Transparent Window Activity -->
    <style name="AppTheme.TransparentWindow" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="sectionLabel">
        <item name="android:textColor">@color/colorTextLabel</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="movieItemTitle">
        <item name="android:textColor">@color/colorTextMovieItem</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movieItemReleaseDate">
        <item name="android:textColor">@color/colorTextMovieItem</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="detailTitle">
        <item name="android:textColor">@color/colorTextMovieItem</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailText">
        <item name="android:textColor">@color/colorTextMovieItem</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
